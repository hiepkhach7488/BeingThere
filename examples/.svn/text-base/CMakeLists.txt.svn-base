foreach(subdir ${examples_sbudirs})
        get_filename_component (dir ${subdir} PATH)
        list(APPEND PCL_EXAMPLES_SUBDIRS ${dir})
endforeach(subdir)

foreach(subdir ${PCL_EXAMPLES_SUBDIRS})
    add_subdirectory(${subdir})
